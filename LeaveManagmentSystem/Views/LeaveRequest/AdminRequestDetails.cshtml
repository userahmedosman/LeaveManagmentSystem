@model LeaveRequestAdminDetailVM
@using LeaveManagmentSystem.Services.LeaveRequests;
@{
    ViewData["Title"] = "Employee Leave Request Detail";
    string Status =  ""; 
    if (Model.LeaveRequestStatusEnum == LeaveRequestStatusEnum.Approved)
    {
        Status = "Approved";
    }

    if (Model.LeaveRequestStatusEnum == LeaveRequestStatusEnum.Cancelled)
    {
        Status = "Cancelled";
    }

    if (Model.LeaveRequestStatusEnum == LeaveRequestStatusEnum.Declined)
    {
        Status = "Declined";
    }
    if (Model.LeaveRequestStatusEnum == LeaveRequestStatusEnum.Pending)
    {
        Status = "Pending";
    }
}

<h1>Employee Leave Request Detail</h1>

<hr />
<span class="p-1 w-100 bg-secondary rounded-3 text-center">Employee Information</span>
<div>
    <dl class="row flex-md-column mt-4">
       
        <dd class="col-sm-10">
          <div class="d-flex gap-5 align-content-between mt-2">
				<span class="fw-bold">Full Name:</span>
                @Model.Employee.FirstName @Model.Employee.LastName
          </div>
            <div class="d-flex gap-5 align-content-between mt-2">
                <span class="fw-bold">Email:</span>
                @Model.Employee.Email
            </div>
            <div class="d-flex gap-5 align-content-between mt-2">
                <span class="fw-bold">BirthDate:</span>
                @Model.Employee.BirthDate
            </div>
		</dd>
      
    </dl>
    <hr />
    <span class="p-1 w-100 bg-secondary rounded-3 text-center">Leave Request Information</span>
    <dl class="row flex-md-column mt-4">
       
        <div class="d-flex gap-4 align-items-baseline">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StartDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StartDate)
            </dd>
        </div>
        <div class="d-flex gap-4 align-items-baseline">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EndDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EndDate)
            </dd>
        </div>
        <div class="d-flex gap-4 align-items-baseline">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NumberOfDays)
            </dt>
            <dd class="col-sm-2">
                @Html.DisplayFor(model => model.NumberOfDays)
            </dd>
        </div>
        <div class="d-flex gap-4 align-items-baseline">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LeaveType)
            </dt>
            <dd class="col-sm-2">
                @Html.DisplayFor(model => model.LeaveType)
            </dd>
        </div>

        <div class="d-flex gap-4 align-items-baseline">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsEmergency)
            </dt>
            <dd class="col-sm-2">
                @if (Model.IsEmergency is not null)
                {
                    @(Model.IsEmergency.Value ? "Yes" : "No")
                }
                else
                {
                    <span>Not specified</span>
                }
            </dd>
        </div>

        <div class="d-flex gap-4 align-items-baseline">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RequestComment)
            </dt>
            <dd class="col-sm-2">
                @Html.DisplayFor(model => model.RequestComment)
            </dd>
        </div>

        <div class="d-flex gap-4 align-items-baseline">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LeaveRequestStatusEnum)
            </dt>
            <dd class="col-sm-2">
                @Status
            </dd>
        </div>
    </dl>
    <hr />
    <span class="p-1 w-100 bg-secondary rounded-3 text-center">Reviewer Information</span>
    <dl class="row flex-md-column mt-4">
        
        <div class="d-flex gap-4 align-items-baseline">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Reviewer)
            </dt>
            <dd class="col-sm-2">
                @if (Model.Reviewer is not null)
                {
                    <span>@Model.Reviewer.FirstName @Model.Reviewer.LastName</span>
                }
                else
                {
                    <span>Not Specified</span>
                }
            </dd>
        </div>

        <div class="d-flex gap-4 align-items-baseline">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ReviewComment)
            </dt>
            <dd class="col-sm-2">
                @if (Model.ReviewComment is not null)
                {
                    @Model.ReviewComment
                }
                else
                {
                    <span>Not Specified</span>
                }
            </dd>
        </div>
    </dl>
</div>
<br />
<a class="btn btn-primary" asp-action="AdminRequestList">Back to List</a>