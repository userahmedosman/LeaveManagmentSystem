@model LeaveRequestCreateVM

@{
    ViewData["Title"] = "Create Leave Request";
}

<h1>Create Leave Request</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="LeaveTypeId" class="control-label">@Html.DisplayNameFor(model => model.LeaveTypes)</label>
                <select asp-for="LeaveTypeId" class ="form-select" asp-items="@Model.LeaveTypes"></select>
            </div>
          
            <div class="form-group mt-2">
                <label asp-for="RequestComment" class="control-label"></label>
                <textarea  asp-for="RequestComment" class="form-control" placeholder="Optional"></textarea>
                <span asp-validation-for="RequestComment" class="text-danger"></span>
            </div>
          
            <div class="form-group mt-2">
                <label asp-for="IsEmergency" class="control-label"></label>
                <br />
                @Html.CheckBox("IsEmergency", Model.IsEmergency.GetValueOrDefault(), new { @class = "form-check-input" })
                <label asp-for="IsEmergency" class="form-check-label">Check here for emergency request</label>
                <span asp-validation-for="IsEmergency" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-controller="LeaveAllocation" asp-action="Details" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
